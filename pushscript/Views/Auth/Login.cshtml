@{
    Layout = null;
}
<!doctype html>
<html class="no-js " lang="en">
<head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Push</title>
    <link rel="icon" type="image/png" href="/assets/icon_a.jpg" />
    <!-- Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:600,700,800,900" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Roboto:400,500" rel="stylesheet">
    <!-- Core CSS -->
    <link href="~/login-assets/assets/css/bulma.css" rel="stylesheet" />
    <link href="~/login-assets/assets/css/app.css" rel="stylesheet" />
    <link href="~/login-assets/assets/css/core.css" rel="stylesheet" />
    <!-- Custom CSS -->
    <link href="~/login-assets/assets/css/custom.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
    <!-- Pretty CSS -->
    <link href="~/login-assets/assets/css/pretty.css" rel="stylesheet" />
    <!-- Pretty CSS -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <!-- Concatenated js plugins and jQuery -->
    <script src="~/login-assets/assets/js/app.js"></script>
    <!-- The core Firebase JS SDK is always required and must be listed first -->
    <script src="https://www.gstatic.com/firebasejs/8.7.0/firebase-app.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.7.0/firebase-auth.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.7.0/firebase-database.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.7.0/firebase-firestore.js"></script>
    <script src="https://www.gstatic.com/firebasejs/8.7.0/firebase-storage.js"></script>
    <script src="~/assets/Firebase.js"></script>
    <style>
        .login-wrapper .hero.is-login {
            background: #ffffff;
        }

        .login-wrapper .form-wrapper {
            padding: 70px 20px 25px;
            -webkit-box-shadow: 3px 3px 5px 6px #f3f3f3;
            border-radius: 15px;
        }

        .has-text-centered a:hover {
            color: #f6ac92 !important
        }

        .signin {
            border-radius: 35px !important;
            margin-bottom: 10px;
        }

        .signin-pass {
            border-radius: 35px !important;
            margin-bottom: 30px;
        }

        .button.is-solid.primary-button {
            background: #cea33c;
            border-color: #cea33c;
            color: #fff !important;
        }

        .login-wrapper .form-wrapper .forgot-password a:hover {
            color: #0071bc !important;
        }

        .p-viewer {
            float: right;
            margin-top: -60px;
            margin-right: 10px;
            position: relative;
            z-index: 1;
            cursor: pointer;
        }
    </style>
</head>
<body class="is-white">
    <!-- Pageloader -->
    <div class="login-wrapper">
        <!-- Main Wrapper -->
        <div class="login-wrapper columns is-gapless">
            <!--Right Side-->
            <div class="column is-12">
                <div class="hero form-hero is-fullheight">
                    <!--Login Form-->
                    <div class="hero-body">
                        <div style=" text-align: center;" class="form-wrapper">
                            <!--Form-->
                            <form id="login-form" method="POST" action="#" novalidate="" class="login-form">
                                <div class="field">
                                    <div class="control">
                                        <input class="input email-input signin" id="login-email" type="email" placeholder="Ex: User@CompanyName.com">
                                        <div class="input-icon">
                                            <i data-feather="mail"></i>
                                        </div>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <input id="login-password" class="input password-input signin-pass" type="password" placeholder="●●●●●●●">
                                        <div class="input-icon">
                                            <i data-feather="lock"></i>
                                        </div>
                                        <span style="color: #FE901D;" toggle="#login-password" class="p-viewer fa fa-fw fa-eye field-icon toggle-password">
                                        </span>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control">
                                        <button type="submit" id="login-button" class="button is-solid primary-button raised is-rounded is-fullwidth">Sign In</button>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- Core js -->
    <script src="/assets/auth-login.js"></script>
    <script src="/login-assets/assets/js/custom.js"></script>
    <script src="/login-assets/assets/js/tipuedrop_content.js"></script>
    <script src="/login-assets/assets/js/main.js"></script>
    <script src="/login-assets/assets/js/global.js"></script>
    <script>
        $(".toggle-password").click(function () {
            $(this).toggleClass("fa-eye fa-eye-slash");
            var input = $($(this).attr("toggle"));
            if (input.attr("type") == "password") {
                input.attr("type", "text");
            } else {
                input.attr("type", "password");
            }
        });
    </script>
</body>
</html>